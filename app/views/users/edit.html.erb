<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <!-- 0616 Lesson7 6.6 エラー表示追加 -->
      <%= render 'shared/error_messages', object: f.object %> 
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password_digest %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <!--f.password_field:密碼專用輸入欄-->
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :country %>
      <%= f.text_field :country %>
      
      <%= f.label :animal %>
      <%= f.text_field :animal %>

      <%= f.submit "Edit my Miffy account", class: "btn btn-large btn-warning" %>
    <% end %>
  </div>
</div>
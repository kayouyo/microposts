<!--新規登録した場合はユーザーの詳細画面を表示する-->

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <br>
        <%= @user.name %>
      </h1>
     
   　 <%= form_for(@user) do |f| %>
      <!-- 0616 Lesson7 6.6 エラー表示追加 -->
      <%= render 'shared/error_messages', object: f.object %> 
      <br><br>
      <%= f.label :email %>
      <br>
      <%= @user.email %>
      <br><br>
      <%= f.label :country %>
      <br>
      <%= @user.country %>
      <br><br>
      <%= f.label :animal %>
      <br>
      <%= @user.animal %>
      <br><br>
      <%= link_to "Edit my Miffy account", edit_user_path(params[:id]) , class: "btn col-md-offset-2 btn-large btn-warning" %>
    <% end %>
    </section>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>MiffyFollowers (<%= @user.follower_users.count %>)</h3>
      <ol class="followers">
       <%= render "followers" %>
      </ol>
      <h3>MiffyFollowings (<%= @user.following_users.count %>)</h3>
      <ol class="followings">
       <%= render "followings" %>
      </ol>
      <h3>Miffyposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>